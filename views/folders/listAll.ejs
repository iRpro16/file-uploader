<div class="list-all">
    <div class="details">
        <div>
            <p>Name</p>
        </div>
        <div class="end-detail">
            <p>File size</p>
            <img src="/images/dots-vertical.svg" height="20" width="20">
        </div>
    </div>
    <div class="folders">
        <% if (locals.folders) { %>
            <% folders.forEach(folder => { %>
                <%- include("../partials/folder", { folder: folder }) %>
            <% }) %>
        <% } %>
    </div>
    
    <div class="files">
        <% if (locals.files) { %>
            <% files.forEach(file => { %>
                <%- include("../partials/file", { file: file }) %>
            <% }) %>
        <% } %>
    </div>

    <% if (folders.length === 0 && files.length === 0) { %>
        <div class="no-files">
            <img src="/images/folder-hidden.svg" alt="No files" class="no-files-icon" height="40" width="40">
            <h1 class="no-file-header">No files yet</h1>
            <p class="no-file-text">Start by uploading a file or creating a folder.</p>
            <div class="no-file-actions">
                <a href="/upload-file" class="action-btn">Upload File</a>
                <a href="/create-folder" class="action-btn">New Folder</a>
            </div>
        </div>
    <% } %>
</div>
